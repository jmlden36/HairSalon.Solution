@using HairSalon.Models;
@model List<HairSalon.Models.Client>;

@{
  List<Stylist> stylists = ViewData["stylists"] as List<Stylist>;
}

<h1>Clients</h1>

@if (stylists.Count == 0)
{
  <h3>You need to add a stylist before you can add any clients</h3>
}
else
{
  @if (@Model.Count == 0)
  {
    <h3>No clients have been added yet!</h3>
  } 

  @foreach (Client client in Model)
  {
    <li>@Html.ActionLink($"{client.Name}", "Details", new { id = client.ClientId }) | @client.Stylist.StylistName</li>
  }
  <p>@Html.ActionLink("Add new client", "Create")</p>
}

<p>@Html.ActionLink("Home", "Index", "Home")</p>