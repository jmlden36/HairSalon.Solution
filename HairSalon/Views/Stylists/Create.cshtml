@model HairSalon.Models.Stylist

<h4>Add a new stylist to the roster</h4>
@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.StylistName)
  @Html.TextBoxFor(model => model.StylistName)
  @Html.LabelFor(model => model.Specialty)
  @Html.TextBoxFor(model => model.Specialty)
  @Html.LabelFor(model => model.DateHired)
  @Html.TextBoxFor(model => model.DateHired)

  <input type="submit" value="Add a new stylist" />
}

<p>@Html.ActionLink("Show all stylists", "Index")</p>